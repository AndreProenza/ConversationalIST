<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@android:color/holo_red_dark</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item> <!--custom animation style-->
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="switchColor" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/purple_700</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/purple_700</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>

</resources>